        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-3level %logger{36} - %msg%n"/>
        </Console>

        <!--Ghi log vÃ o file-->

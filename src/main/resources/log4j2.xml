<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Ghi log ra console -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- Ghi log vào file -->
        <File name="FileLogger" fileName="D:\ajax-login\TTLTWeb-ajax-login\logs\app.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%X{user}] [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <!-- Quay vòng log -->
        <RollingFile name="RollingFileLogger" fileName="D:\ajax-login\TTLTWeb-ajax-login\logs\app.log"
                     filePattern="logs/$${date:yyyy-MM-dd}/app-%d{MM-dd-yyyy}.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Logger gốc -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="RollingFileLogger"/>
        </Root>

        <!-- Logger cho các lớp cụ thể -->
        <Logger name="com.example" level="debug">
            <AppenderRef ref="FileLogger"/>
        </Logger>
    </Loggers>
</Configuration>
